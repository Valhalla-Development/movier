{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 20",
  "extends": "@tsconfig/node20/tsconfig.json",

  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true,
    "isolatedModules": true
  },
  "exclude": ["node_modules", "dist"]
}

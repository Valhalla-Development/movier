{
  "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
  "extends": ["ultracite/core"],
  "linter": {
    "rules": {
      "style": {
        "useFilenamingConvention": "off"
      },
      "performance": {
        "useTopLevelRegex": "off",
        "noBarrelFile": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "indentWidth": 4,
      "lineWidth": 100
    }
  }
}
